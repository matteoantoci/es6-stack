<form class="todo-item-form" method="post">
    <div style="margin-bottom: 10px;">
        <label>Insert title: <input type="text" name="title" /></label>
        <input type="hidden" name="userId" value="1" />
    </div>
    <div>
        <button id="button" type="submit">Submit</button>
    </div>
</form>

<ul>
    {{#todos}}
    <li class="todo-item" data-id="{{id}}">
        Title: {{title}}
        <input type="checkbox" class="complete-checkbox" {{#completed}}checked{{/completed}} />
    </li>
    {{/todos}}
</ul>